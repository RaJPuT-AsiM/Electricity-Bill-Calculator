@model IEnumerable<Bill_Portal.Models.AspNetUsers>

@{
    ViewData["Title"] = "User";
}

<h1 class="text-info">Users</h1>

<table class="table table-hover table-light table-responsive-sm">
    <thead class="bg-info text-white">
        <tr >
            <th>
                @*@Html.DisplayName("Sr No.")*@
            </th>
            <th>
                <a class="text-white" asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.UserName)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>           
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)                
            </th>
            <th>
                <a class="btn btn-light float-right" asp-action="SignUpUser" asp-controller="Account">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            int rowNo = 0;
        }
@foreach (var item in Model) {
        <tr>
                <td>
                    @(rowNo += 1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                 </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td class="float-right">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-secondary" asp-action="ManageUserRoles" asp-route-id="@item.Id" asp-route-name="@item.FullName">Manage Role</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>